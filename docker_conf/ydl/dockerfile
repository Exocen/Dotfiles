FROM alpine:latest

RUN apk add --update-cache python3 py3-pip rsync git ffmpeg make
RUN git clone https://github.com/ytdl-org/youtube-dl.git
RUN cd youtube-dl
RUN make
RUN make install

RUN pip3 install --break-system-packages mutagen

WORKDIR /root/
COPY docker-entrypoint.sh ydl /root/
RUN chmod +x docker-entrypoint.sh ydl
ENTRYPOINT ["/root/docker-entrypoint.sh"]