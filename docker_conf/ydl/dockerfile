FROM alpine:latest

RUN apk add --update-cache python3 py3-pip rsync git ffmpeg curl
RUN curl -L https://yt-dl.org/downloads/latest/youtube-dl -o /usr/bin/youtube-dl
RUN chmod a+rx /usr/local/bin/youtube-dl
RUN pip3 install --break-system-packages mutagen

WORKDIR /root/
COPY docker-entrypoint.sh ydl /root/
RUN chmod +x docker-entrypoint.sh ydl
ENTRYPOINT ["/root/docker-entrypoint.sh"]
