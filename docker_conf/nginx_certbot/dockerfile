FROM nginx:mainline-alpine
ARG DOMAIN

VOLUME /etc/letsencrypt/
VOLUME /usr/share/nginx
EXPOSE 80/TCP 443/TCP

RUN apk add certbot certbot-nginx bash grep supervisor

ADD supervisord.conf /etc/supervisor/conf.d/supervisord.conf
RUN mkdir -p /etc/letsencrypt

WORKDIR /root/
COPY web_engine.sh certbot_renew.sh fifo-nginx.conf nginx.conf healthcheck.sh static-html /root/
RUN find . -type f -print0 | xargs -0 sed -i 's/\[DOMAIN\]/'$DOMAIN'/g'
RUN chmod +x certbot_renew.sh web_engine.sh healthcheck.sh

HEALTHCHECK --interval=30m CMD ./healthcheck.sh

ENTRYPOINT ["/usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf"]
