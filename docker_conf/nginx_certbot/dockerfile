FROM macbre/nginx-http3:latest
ARG DOMAIN

VOLUME /etc/letsencrypt/
VOLUME /usr/share/nginx
EXPOSE 80/TCP 443/TCP

RUN apk add certbot certbot-nginx bash grep supervisor

RUN mkdir -p /etc/letsencrypt

WORKDIR /root/
COPY web_engine.sh certbot_renew.sh supervisord_run.sh supervisord.conf fifo-nginx.conf nginx.conf /root/
RUN find . -type f -print0 | xargs -0 sed -i 's/\[DOMAIN\]/'$DOMAIN'/g'
RUN chmod +x certbot_renew.sh web_engine.sh supervisord_run.sh

HEALTHCHECK --interval=30m CMD [ -e /var/run/nginx.pid ] || exit 1

ENTRYPOINT ["/root/supervisord_run.sh"]
