# redirection http vers https
server {
    listen 80;
    listen [::]:80;
    server_name exocen.com www.exocen.com;
    root /usr/share/nginx/html/;
    location ~ /\.well-known/acme-challenge {
        allow all;
    }

    # Redirect non-https traffic to https
    if ($scheme != "https") {
        return 301 https://$host$request_uri;
        } # managed by Certbot

}
